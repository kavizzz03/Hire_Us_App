<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hire_me_test"
        tools:targetApi="31">
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <!-- ✅ Set SplashActivity as launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ❌ Remove incorrect .Splashactivity (lowercase) -->
        <activity
            android:name=".GiveJobActivity"
            android:exported="false" />
        <activity
            android:name=".FindJobActivity"
            android:exported="false" /> <!-- ✅ Keep MainActivity, but no launcher intent -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>