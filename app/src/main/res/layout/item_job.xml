<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_surface_47"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtJobTitle"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Senior Android Developer"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Company Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtCompany"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Awesome Tech Co."
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtJobTitle" />

        <!-- Meta chips (type, location) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtMealsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Meals: 0"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCompany" />

        <!-- Divider before actions -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSalary"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="6dp"
            android:text="Rs. 50,000"
            android:textColor="?attr/colorPrimary"
            app:drawableStartCompat="@drawable/ic_salary"
            app:drawableTint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtMealsCount"
            app:layout_constraintTop_toBottomOf="@id/txtCompany" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            app:dividerColor="?attr/colorOutlineVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSalary" />

        <!-- Actions: equal-width via ConstraintLayout chain -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewApplicants"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:text="View Applicants"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSecondaryContainer"
            app:backgroundTint="@color/info_47"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/btnAddMeal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddMeal"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:text="Add Meals"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSecondaryContainer"
            app:backgroundTint="@color/success_47"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:layout_constraintEnd_toStartOf="@id/btnFinishJob"
            app:layout_constraintStart_toEndOf="@id/btnViewApplicants"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinishJob"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:text="Finish Job"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnErrorContainer"
            app:backgroundTint="@color/error_47"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnErrorContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAddMeal"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>