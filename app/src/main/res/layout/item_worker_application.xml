<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="12dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Delete (destructive outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textAllCaps="false"
            android:contentDescription="Delete application"
            android:minWidth="0dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:textColor="@color/error_47"
            app:strokeColor="@color/error_47"
            app:iconTint="@color/error_47"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Company -->
        <TextView
            android:id="@+id/tvCompany"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:drawableStartCompat="@drawable/ic_round_work_20"
            android:drawablePadding="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="@id/tvJobTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle" />

        <!-- Applied At -->
        <TextView
            android:id="@+id/tvAppliedAt"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applied at"
            android:gravity="center"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:drawableStartCompat="@drawable/outline_calendar_month_24"
            android:drawableTint="@color/onPrimary_change_47"
            android:drawablePadding="6dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tvJobTitle"
            app:layout_constraintTop_toBottomOf="@id/tvCompany"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>