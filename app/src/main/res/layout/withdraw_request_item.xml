<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job Info -->
        <TextView
            android:id="@+id/tvJobInfo"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="Job #123 â€” Software Engineer"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnWithdraw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="0dp"
            android:layout_marginEnd="12dp"/>

        <!-- Withdraw Button (tonal, light and modern) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithdraw"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:textColor="@color/onPrimary_change_47"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Status (chip-like TextView to keep same id) -->
        <TextView
            android:id="@+id/tvStatus"
            style="@style/TextAppearance.Material3.BodySmall"
            android:text="Pending"
            android:textColor="@color/onPrimary_change_47"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_status_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJobInfo"
            android:layout_marginTop="10dp"/>

        <!-- Updated At -->
        <TextView
            android:id="@+id/tvUpdatedAt"
            style="@style/TextAppearance.Material3.BodySmall"
            android:text="Updated: 2025-08-17"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvStatus"
            app:layout_constraintBaseline_toBaselineOf="@id/tvStatus"
            android:layout_marginStart="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>