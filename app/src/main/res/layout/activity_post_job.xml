<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post a Job"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Job Title Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Job Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerJobTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <!-- OR Custom Title Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Enter Custom Job Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editCustomTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Custom Job Title"
            android:textColor="#333333"
            android:textSize="15sp"
            android:maxLines="1"
            android:inputType="textCapWords"/>

        <!-- Vacancies -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Vacancies"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editVacancies"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Enter number"
            android:inputType="number" />

        <!-- Job Time (Start and End) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Time"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editStartTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:hint="Start Time"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" to "
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editEndTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:hint="End Time"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#333333"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Job Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Location"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Location"
            android:inputType="textCapWords"/>

        <!-- Basic Salary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Salary(Per Day)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editSalary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Basic salary"
            android:inputType="numberDecimal" />

        <!-- OT Salary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OT Salary(Per Hour)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editOtSalary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="OT salary"
            android:inputType="numberDecimal" />

        <!-- Requirements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirements"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editRequirements"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Job requirements"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:scrollbars="vertical"/>

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Date"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:hint="YYYY-MM-DD"
                android:focusable="false"
                android:clickable="true" />

            <ImageButton
                android:id="@+id/btnDatePicker"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:contentDescription="Select Date"/>
        </LinearLayout>

        <!-- Pickup Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editPickup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Pickup location"
            android:inputType="textCapWords"/>

        <!-- Contact Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editContact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:hint="Contact phone or email"
            android:inputType="phone"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnPostJob"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Post Job"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_rounded"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
