<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_surface_47"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Accent stripe -->
        <View
            android:id="@+id/accentStripe"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_accent_stripe"
            android:layout_marginVertical="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Job Title -->
        <TextView
            android:id="@+id/textJobTitle"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/accentStripe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Company -->
        <TextView
            android:id="@+id/textCompany"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:drawableStartCompat="@drawable/ic_round_work_20"
            android:drawablePadding="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/textJobTitle"
            app:layout_constraintStart_toStartOf="@id/textJobTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Salary (chip-like) -->
        <TextView
            android:id="@+id/textSalary"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 0.00"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:background="@drawable/bg_tonal_chip"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textCompany"
            app:layout_constraintStart_toStartOf="@id/textJobTitle" />

        <!-- Location -->
        <TextView
            android:id="@+id/textLocation"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:drawableStartCompat="@drawable/ic_location_24"
            android:drawableTint="@color/onPrimary_change_47"
            android:drawablePadding="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/textSalary"
            app:layout_constraintStart_toStartOf="@id/textJobTitle"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>