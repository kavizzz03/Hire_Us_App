<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jobCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/card_surface_47"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp"
    app:rippleColor="?attr/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job ID -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/jobIdText"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job ID: 123"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/statusText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>

        <!-- Status (pill) -->
        <TextView
            android:id="@+id/statusText"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_pill"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Transaction Type (pill) -->
        <TextView
            android:id="@+id/transactionTypeText"
            style="@style/TextAppearance.Material3.LabelMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="@drawable/bg_pill"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobIdText"
            android:layout_marginTop="8dp"/>

        <!-- Updated At -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/updatedAtText"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated: 2025-08-17"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/transactionTypeText"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            app:dividerColor="?attr/colorOutlineVariant"
            app:layout_constraintTop_toBottomOf="@id/transactionTypeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Metrics (2 columns) -->
        <LinearLayout
            android:id="@+id/metricsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Salary -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/salaryText"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary: Rs. 1000"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="6dp"/>

                <!-- OT Hours -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/otHoursText"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OT Hours: 5"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- OT Salary -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/otSalaryText"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OT Salary: Rs. 500"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="6dp"/>

                <!-- Total (emphasis) -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/totalText"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: Rs. 1500"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Withdraw Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithdraw"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw"
            android:textColor="?attr/colorPrimary"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/metricsRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>