<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/textJobTitle"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Meta row: Date + Location (chip-like) -->
        <LinearLayout
            android:id="@+id/metaRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textJobTitle"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Job Date (chip) -->
            <TextView
                android:id="@+id/textJobDate"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date — 2025-08-18"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:background="@drawable/bg_tonal_chip"
                android:includeFontPadding="false"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                app:drawableStartCompat="@drawable/outline_calendar_month_24"
                app:drawableTint="@color/onPrimary_change_47"
                android:drawablePadding="6dp" />

            <!-- Job Location (chip) -->
            <TextView
                android:id="@+id/textJobLocation"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location — Kaduwela"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:background="@drawable/bg_tonal_chip"
                android:includeFontPadding="false"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_location_24"
                app:drawableTint="@color/onPrimary_change_47"
                android:drawablePadding="6dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>