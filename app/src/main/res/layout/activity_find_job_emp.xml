<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clipChildren="false"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_over"
        android:scrollbars="none"
        android:scrollbarStyle="outsideOverlay"
        >

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:paddingBottom="12dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="18sp"
            android:textColor="#616161"
            android:paddingBottom="12dp"
            android:fontFamily="sans-serif" />

        <!-- Section for small labels and values -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="12dp">

            <TextView
                android:id="@+id/tvVacancies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vacancies: 0"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvTimeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Range: N/A"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: Unknown"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvBasicSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Salary: Rs. 0.00"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvOtSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OT Salary: Rs. 0.00"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requirements"
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingTop="12dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvJobDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Date: N/A"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvPickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location: N/A"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Info: N/A"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: N/A"
                android:textSize="16sp"
                android:textColor="#424242"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply for this Job"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:stateListAnimator="@null"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>
