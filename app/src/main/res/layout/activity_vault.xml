<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".view.actvities.VaultActivity">

    <!-- Top App Bar with visible title and subtitle -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="?attr/colorPrimary"
        android:title="My Vault"
        app:subtitle="Transaction History"
        android:titleTextColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        app:titleTextAppearance="@style/Widget.MaterialComponents.Toolbar.Title"
        app:subtitleTextAppearance="@style/Widget.MaterialComponents.Toolbar.Subtitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:titleCentered="false"/>

    <!-- Error Message Card with icon and text -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/errorCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorError"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@android:color/white"
                android:src="@drawable/ic_baseline_error_outline_24" />

            <TextView
                android:id="@+id/errorText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:layout_weight="1"
                android:text="Error message will appear here"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Total Amount Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/totalAmountCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        android:elevation="6dp"
        app:cardBackgroundColor="?attr/colorSecondaryContainer"
        app:layout_constraintTop_toBottomOf="@id/errorCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/totalAmountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Total Amount: Rs. 0.00"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Vault RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/totalAmountCard"
        app:layout_constraintBottom_toTopOf="@id/footerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_vault" />

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Â© 2025 Hire Us System"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
