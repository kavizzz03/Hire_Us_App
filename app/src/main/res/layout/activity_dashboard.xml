<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DashboardActivity">

    <!-- Top welcome bar with icon and username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/imageViewUserIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:contentDescription="User Icon"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:layout_marginEnd="16dp"
            android:clipToOutline="true"
            android:shape="oval"/>

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Username"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Buttons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/buttonViewUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View and Update Profile"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/buttonMakeNewJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make a New Job"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/buttonCurrentJobManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Job Management"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/buttonJobHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job History"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/buttonFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/buttonWithdrawRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Withdraw Requests"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
