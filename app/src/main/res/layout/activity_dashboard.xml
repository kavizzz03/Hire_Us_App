<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    tools:context=".view.actvities.DashboardActivity">

    <!-- Header Card with Company Icon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="20dp"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Company Icon -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/companyIconImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_profile_24"
                app:strokeWidth="1dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Full"
                tools:src="@drawable/outline_profile_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Name"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Welcome, Alex" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons Grid -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerCard"
        android:layout_above="@id/logoutBtn"
        android:paddingHorizontal="16dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:useDefaultMargins="true">

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/makeJobBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="15dp"
            android:text="Make Job"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_add_job_24"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="@color/onPrimary_47"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="15dp"
            android:text="Edit Profile"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_person_edit_24"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="@color/onPrimary_47"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/jobHistoryBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="15dp"
            android:text="Job History"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_history_24"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="@color/onPrimary_47"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/withdrawRequestBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="15dp"
            android:text="Withdraw"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/ic_salary"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="@color/onPrimary_47"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chatBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="15dp"
            android:text="Message"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_chat_24"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="@color/onPrimary_47"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editJobBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="15dp"
            android:text="Manage Job"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_contract_edit_24"
            app:iconGravity="top"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="@color/onPrimary_47"
            app:cornerRadius="20dp" />

    </androidx.gridlayout.widget.GridLayout>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavigation"
        android:layout_margin="16dp"
        android:text="Log Out"
        android:backgroundTint="@color/error_47"
        android:textColor="#FFFFFF" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="?android:attr/windowBackground" />

</RelativeLayout>