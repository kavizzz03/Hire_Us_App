<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <!-- Top App Bar with notification icon -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="#3F51B5"
        app:title="Dashboard"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/top_app_bar_menu"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_menu" />

    <!-- Welcome Text -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topAppBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="20dp"
        app:strokeColor="?attr/colorOutlineVariant">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
                    app:srcCompat="@drawable/outline_profile_24"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:tint="?attr/colorOnPrimaryContainer" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/topAppBar"
                        android:layout_margin="16dp"
                        android:text="Welcome, [Name]"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Welcome, Alex" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Action Buttons -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerCard"
        android:paddingHorizontal="16dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/makeJobBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="16dp"
            android:text="Make Job"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_add_job_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="16dp"
            android:text="Edit Profile"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_person_edit_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/jobHistoryBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="16dp"
            android:text="Job History"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_history_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/withdrawRequestBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="16dp"
            android:text="Withdraw"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/ic_salary"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chatBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="16dp"
            android:text="Message"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_chat_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editJobBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:minHeight="112dp"
            android:paddingVertical="16dp"
            android:text="Manage Job"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:icon="@drawable/outline_contract_edit_24"
            app:iconGravity="textTop"
            app:iconSize="40dp"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            app:cornerRadius="20dp" />

    </androidx.gridlayout.widget.GridLayout>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_above="@id/bottomNavigation"
        android:layout_margin="16dp"
        android:backgroundTint="#FF4444"
        android:textColor="#FFFFFF" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="?android:attr/windowBackground" />

</RelativeLayout>
