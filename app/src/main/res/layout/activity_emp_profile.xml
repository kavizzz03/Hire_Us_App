<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">



        <!-- Profile Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:cardCornerRadius="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="18dp">

                <TextView
                    android:id="@+id/textViewWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, User"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    style="@style/TextAppearance.MaterialComponents.Headline5"/>

                <TextView
                    android:id="@+id/textViewJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    style="@style/TextAppearance.MaterialComponents.Headline6"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/textViewIdNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 123456"
                    android:layout_marginTop="1dp"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    app:chipIconTint="?attr/colorOnSecondaryContainer"/>
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="1dp"
            app:alignmentMode="alignMargins"
            android:paddingTop="10dp"
            app:columnCount="2"
            app:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFindJobs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="Find New Job"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_search_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyVault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="My Vault"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_account_balance_wallet_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyReviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="My Ratings"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_star_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="View Profile"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_profile_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditJobs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="Edit My Jobs"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_contract_edit_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJobHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="Job History"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_history_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrderFood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingVertical="16dp"
                android:text="Oder Food"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_columnWeight="1"
                app:layout_gravity="fill_horizontal"
                app:icon="@drawable/outline_briefcase_meal_24"
                app:iconGravity="textTop"
                app:iconSize="40dp"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                app:iconTint="?attr/colorOnSecondaryContainer"/>

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
