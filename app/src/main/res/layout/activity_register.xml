<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wave">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hire Me"
            android:textColor="@color/onPrimary_47"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your profile to get started"
            android:textColor="@color/onPrimary_47"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInBtn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:textColor="@color/btn_primary_text"
            app:backgroundTint="@color/btn_primary_tint"/>

        <!-- Personal Info -->

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:autofillHints="name"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Username"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:autofillHints="username"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Contact Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:autofillHints="phone"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Email"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:autofillHints="emailAddress"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="ID Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Permanent Address">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/permanentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress|textMultiLine"
                android:minLines="2"
                android:maxLines="5"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:autofillHints="postalAddress"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Current Address">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/currentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress|textMultiLine"
                android:minLines="2"
                android:maxLines="5"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:autofillHints="postalAddress"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Work Experience (summary)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/workExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="6"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Passwords -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Password"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:autofillHints="newPassword"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Confirm Password"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Job Title Spinner -->
        <Spinner android:id="@+id/jobTitleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/customJobTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <EditText
                android:id="@+id/customJobTitle"
                android:hint="Enter Custom Job Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ID Front -->

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID verification"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload ID Front Side"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/idFrontImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Front side of ID preview"/>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cameraFrontBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Camera"
                app:icon="@drawable/outline_add_a_photo_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/galleryFrontBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Gallery"
                app:icon="@drawable/outline_add_photo_alternate_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>
        </LinearLayout>


        <!-- ID Back -->

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload ID Back Side"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/idBackImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Back side of ID preview"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cameraBackBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Camera"
                app:icon="@drawable/outline_add_a_photo_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/galleryBackBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Gallery"
                app:icon="@drawable/outline_add_photo_alternate_24"
                app:iconPadding="8dp"
                app:iconGravity="textStart"/>
        </LinearLayout>

        <!-- Bank Details -->
        <Spinner android:id="@+id/bankNameSpinner" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Bank Account Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bankAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Bank Branch">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bankBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:background="@drawable/bg_input"
                android:textColor="@color/onSurface_47"
                android:textColorHint="@color/hint_47"/>
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox android:id="@+id/privacyPolicyCheckbox" android:text="I agree to the Privacy Policy" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/createAccountBtn" android:text="Create Account" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>