<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#4DD0E1"
        android:endColor="#0288D1"
        android:angle="90"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#ffffff"/>

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
